{
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "prettier",
      "plugin:prettier/recommended"
    ],
    "overrides": [
      {
        "files": ["*.ts"],
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
          "project": ["./tsconfig.json"]
        },
        "extends": [
          "plugin:@typescript-eslint/strict-type-checked"
        ]
      }
    ],
    "parser": "espree",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module",
      "project": ["./tsconfig.json"]
    }
  }